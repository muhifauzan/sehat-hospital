<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Hospital</th>
      <th>Name</th>
      <th>Age</th>
      <th>Focus</th>
      <th>Schedule</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for doctor <- @doctors do %>
    <tr>
      <td><%= hospital_name(doctor) %></td>
      <td><%= doctor.name %></td>
      <td><%= doctor.age %></td>
      <td><%= doctor.focus %></td>
      <td><%= doctor.schedule %></td>

      <td>
        <span><%= link "Show", to: Routes.doctor_path(@conn, :show, doctor) %></span>
        <span><%= link "Edit", to: Routes.doctor_path(@conn, :edit, doctor) %></span>
        <span><%= link "Delete", to: Routes.doctor_path(@conn, :delete, doctor), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Doctor", to: Routes.doctor_path(@conn, :new) %></span>
